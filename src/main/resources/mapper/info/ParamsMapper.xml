<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.achilles.wild.server.business.dao.info.ParamsDao">
  <resultMap id="BaseResultMap" type="com.achilles.wild.server.business.entity.info.Params">
      <id column="id" jdbcType="INTEGER" property="id" />
      <result column="code" jdbcType="VARCHAR" property="code" />
      <result column="val" jdbcType="VARCHAR" property="val" />
      <result column="status" jdbcType="INTEGER" property="status" />
      <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
      <result column="update_date" jdbcType="TIMESTAMP" property="updateDate" />
  </resultMap>

  <sql id="Base_Column_List">
      id, code, val, status, create_date, update_date
  </sql>

  <select id="selectByCode" parameterType="java.lang.String" resultMap="BaseResultMap">
    SELECT
          <include refid="Base_Column_List"/>
    FROM
          params
    <where>
         <if test="code != null and code!=''">
             AND code = #{code,jdbcType=VARCHAR}
          </if>
    </where>
  </select>

  <insert id="insert" parameterType="com.achilles.wild.server.business.entity.info.Params" useGeneratedKeys="true" keyProperty="id">
    insert into
          params ( code, val)
    values
          (#{code,jdbcType=VARCHAR}, #{val,jdbcType=VARCHAR})
  </insert>

  <update id="updateByCode" parameterType="map">
    update
          params
    <set>
      <if test="val != null">
        val = #{val,jdbcType=VARCHAR},
      </if>
    </set>
    where code = #{code,jdbcType=VARCHAR}
  </update>
</mapper>